<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="256dp"
    xmlns:tools="http://schemas.android.com/tools"
    android:background="@drawable/header"
    android:alpha="0.8"
    tools:ignore="UnusedAttribute,RtlSymmetry,UseCompoundDrawables,MangledCRLF,ContentDescription,
    DisableBaselineAlignment,InefficientWeight,HardcodedText,UselessParent,RtlHardcoded"
    android:orientation="vertical">


    <TextView
        android:id="@+id/GreetingHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:layout_marginBottom="33dp"
        android:paddingTop="5dp"
        android:paddingBottom="5dp"
        android:paddingEnd="25dp"
        android:gravity="right"
        style="@style/TextAppearance.AppCompat.Title"
        android:fontFamily="sans-serif"
        android:text="Hello"
        android:background="#32455a64"
        android:textColor="#ECEFF1" />

    <TextView
        android:id="@+id/UserNameHeader"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_gravity="bottom"
        android:paddingLeft="10dp"
        android:paddingStart="10dp"
        android:paddingBottom="7dp"
        android:paddingEnd="25dp"
        android:gravity="right"
        android:fontFamily="sans-serif"
        style="@style/TextAppearance.AppCompat.Title"
        android:text="Hello"
        android:background="#32455a64"
        android:textColor="#ECEFF1" />

    <ImageView
        android:id="@+id/imageView"
        android:layout_width="100dp"
        android:layout_height="100dp"
        android:layout_gravity="center"
        android:paddingBottom="10dp"
        android:layout_marginBottom="20dp"
        app:srcCompat="@mipmap/ic_launcher" />
</FrameLayout>